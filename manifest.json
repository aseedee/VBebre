{
    "manifest_version": 3,

    "name": "ВБебре",
    "description": "Добавьте немного бебры в Ваш ВКонтакте.",
    "version": "0.2.1",

    "icons": {
        "128": "/res/icon.png"
    },

    "action": {
        "default_title": "ВБебре",
        "default_icon": "/res/icon.png",
        "default_popup": "/popup/popup.html"
    },

    "background": {
        "service_worker": "init.js"
    },

    "content_scripts": [
        {
            "matches": [ "*://*.vk.com/*" ],
            "js": [ "main.js" ]
        }
    ],

    "permissions": [
        "storage"
    ]
}
